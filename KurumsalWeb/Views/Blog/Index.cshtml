@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });

</script>

<h2>Blog Kayıtları</h2>
<a class="btn btn-default" href="/Blog/Create/">Create</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@item.Kategori.KategoriAd</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td><a href="/Blog/Edit/@item.BlogId">Edit</a> | <a href="/Blog/Delete/@item.BlogId">Delete</a> </td>
            </tr>
        }

    </tbody>
</table>

