@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğrenciler</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ÖĞRENCİ ID</th>
            <th>ADI</th>
            <th>SOYADI</th>
            <th>CİNSİYET</th>
            <th>KULÜP</th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OGRENCIID</td>
                <td>@ogr.OGRAD </td>
                <td>@ogr.OGRSOYAD </td>
                <td>@ogr.OGRCINSIYET</td>
                <td>@ogr.TBLKULUPLER.KULUPAD</td>
                <td>
                    <a style="margin-right:15px" href="/Ogrenci/Sil/@ogr.OGRENCIID" class="btn btn-danger">SİL</a>
                    <a href="/Ogrenci/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">GÜNCELLE</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<a href="/Ogrenci/YeniOgrenci/" class="btn btn-primary">Yeni Öğrenci Ekle</a>

