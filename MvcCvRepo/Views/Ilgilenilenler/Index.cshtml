@using MvcCv.Models.Entity
@model List<TBLAWARDS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Ilgilenilenler", FormMethod.Get))
{
    <p>
        @Html.TextBox("p")
        <input type="submit" value="ARA" />
    </p>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>UZMANLIKLAR</th>
            <th>SİL</th>
            <th>GÜNCELLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <th>@x.ID</th>
            <td>@x.AWARD</td>
            <td>@Html.ActionLink("Sil", "Sil", new { id = x.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Emin misiniz?')" })</td>
            <td><a href="/Ilgilenilenler/IlgilenilenlerGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Ilgilenilenler/YeniUzmanlıklar/" class="btn btn-info">Yeni Uzmanlık Ekle</a>